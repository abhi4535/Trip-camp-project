<%- layout('./layout/boilerplate') %>
<h1>All Campgrounds</h1>
<a href="/campgrounds/new">add new</a>

<% for(let camp of campgrounds){ %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= camp.image %>" alt="" class="img-fluid" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <div class="card-title">
          <h1><%=camp.title %></h1>
        </div>
        <div class="card-text">
          <p><%= camp.description %></p>
        </div>
        <div class="card-text">
          <small class="text-muted"><%=camp.location %></small>
        </div>
        <a href="/campgrounds/<%=camp._id %>" class="btn btn-primary"
          >view <%= camp.title %></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
